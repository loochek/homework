{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "onegin build",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "onegin build debug",
            "type": "shell",
            "command": "make build_debug",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        },
        {
            "label": "onegin clean",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "onegin test",
            "type": "shell",
            "command": "make test",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        }
    ]
}